{
  "mqtt": {
    "connection": {
      "host": "mosquitto",
      "port": 1883,
      "username": "admin",
      "password": "admin_password_456",
      "clientId": "test-client",
      "clean": true,
      "reconnectPeriod": 1000,
      "connectTimeout": 30000,
      "keepalive": 60
    },
    "topics": {
      "test": {
        "prefix": "test/",
        "photovoltaic": "devices/photovoltaic/+/data",
        "windTurbine": "devices/wind_turbine/+/data",
        "biogasPlant": "devices/biogas_plant/+/data",
        "heatBoiler": "devices/heat_boiler/+/data",
        "energyStorage": "devices/energy_storage/+/data",
        "system": "system/+/status",
        "health": "system/health/+"
      },
      "wildcards": {
        "allDevices": "devices/+/+/data",
        "allSystem": "system/+/+",
        "deviceStatus": "devices/+/+/status"
      }
    },
    "qos": {
      "default": 1,
      "critical": 2,
      "monitoring": 0
    },
    "retain": {
      "status": true,
      "data": false
    },
    "testMessages": {
      "photovoltaic": {
        "topic": "devices/photovoltaic/pv001/data",
        "payload": {
          "timestamp": "2024-01-01T12:00:00Z",
          "device_id": "pv001",
          "device_type": "photovoltaic",
          "power_output": 2500.5,
          "voltage": 48.2,
          "current": 51.9,
          "temperature": 45.3,
          "efficiency": 18.5,
          "irradiance": 850.2
        }
      },
      "windTurbine": {
        "topic": "devices/wind_turbine/wt001/data",
        "payload": {
          "timestamp": "2024-01-01T12:00:00Z",
          "device_id": "wt001",
          "device_type": "wind_turbine",
          "power_output": 1800.0,
          "wind_speed": 12.5,
          "wind_direction": 180,
          "rpm": 1200,
          "temperature": 25.0,
          "efficiency": 85.2
        }
      },
      "biogasPlant": {
        "topic": "devices/biogas_plant/bg001/data",
        "payload": {
          "timestamp": "2024-01-01T12:00:00Z",
          "device_id": "bg001",
          "device_type": "biogas_plant",
          "gas_flow_rate": 150.5,
          "methane_concentration": 65.2,
          "temperature": 38.0,
          "pressure": 1.2,
          "power_output": 3200.0,
          "efficiency": 78.5
        }
      },
      "heatBoiler": {
        "topic": "devices/heat_boiler/hb001/data",
        "payload": {
          "timestamp": "2024-01-01T12:00:00Z",
          "device_id": "hb001",
          "device_type": "heat_boiler",
          "temperature": 85.0,
          "pressure": 2.5,
          "fuel_consumption": 45.2,
          "efficiency": 92.1,
          "heat_output": 50000.0,
          "status": "running"
        }
      },
      "energyStorage": {
        "topic": "devices/energy_storage/es001/data",
        "payload": {
          "timestamp": "2024-01-01T12:00:00Z",
          "device_id": "es001",
          "device_type": "energy_storage",
          "state_of_charge": 75.5,
          "voltage": 400.0,
          "current": 25.0,
          "temperature": 25.0,
          "power_input": 10000.0,
          "power_output": 0.0,
          "status": "charging"
        }
      }
    },
    "validation": {
      "requiredFields": ["timestamp", "device_id", "device_type"],
      "timestampFormat": "ISO 8601",
      "numericRanges": {
        "power_output": [0, 10000],
        "temperature": [-50, 100],
        "voltage": [0, 1000],
        "current": [0, 100],
        "efficiency": [0, 100]
      },
      "deviceTypes": [
        "photovoltaic",
        "wind_turbine",
        "biogas_plant",
        "heat_boiler",
        "energy_storage"
      ]
    },
    "testScenarios": {
      "connection": {
        "description": "Test MQTT broker connection",
        "timeout": 10000,
        "retries": 3
      },
      "authentication": {
        "description": "Test MQTT authentication",
        "validCredentials": true,
        "invalidCredentials": false
      },
      "publishing": {
        "description": "Test message publishing",
        "qos": [0, 1, 2],
        "retain": [true, false]
      },
      "subscribing": {
        "description": "Test topic subscription",
        "topics": ["devices/+/+/data", "system/+/status"],
        "qos": 1
      },
      "messageFormat": {
        "description": "Test message format validation",
        "validFormats": ["JSON"],
        "requiredFields": ["timestamp", "device_id", "device_type"]
      },
      "topicStructure": {
        "description": "Test topic structure validation",
        "validPatterns": [
          "devices/{device_type}/{device_id}/data",
          "devices/{device_type}/{device_id}/status",
          "system/{component}/status"
        ]
      }
    }
  }
} 