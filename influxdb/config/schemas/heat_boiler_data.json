{
  "name": "heat_boiler_data",
  "description": "Heat boiler performance data",
  "columns": [
    {
      "name": "timestamp",
      "type": "TIMESTAMP",
      "primary_key": true
    },
    {
      "name": "device_id",
      "type": "STRING",
      "tag": true
    },
    {
      "name": "location",
      "type": "STRING",
      "tag": true
    },
    {
      "name": "device_type",
      "type": "STRING",
      "tag": true
    },
    {
      "name": "status",
      "type": "STRING",
      "tag": true
    },
    {
      "name": "power_output",
      "type": "DOUBLE",
      "description": "Power output in watts"
    },
    {
      "name": "temperature",
      "type": "DOUBLE",
      "description": "Temperature in Celsius"
    },
    {
      "name": "pressure",
      "type": "DOUBLE",
      "description": "Pressure in bar"
    },
    {
      "name": "efficiency",
      "type": "DOUBLE",
      "description": "Boiler efficiency percentage"
    },
    {
      "name": "fuel_consumption",
      "type": "DOUBLE",
      "description": "Fuel consumption rate in kg/h"
    },
    {
      "name": "water_flow_rate",
      "type": "DOUBLE",
      "description": "Water flow rate in L/min"
    },
    {
      "name": "exhaust_temperature",
      "type": "DOUBLE",
      "description": "Exhaust gas temperature in Celsius"
    },
    {
      "name": "oxygen_level",
      "type": "DOUBLE",
      "description": "Oxygen level in exhaust gas percentage"
    },
    {
      "name": "co_level",
      "type": "DOUBLE",
      "description": "Carbon monoxide level in ppm"
    },
    {
      "name": "no2_level",
      "type": "DOUBLE",
      "description": "Nitrogen dioxide level in ppm"
    },
    {
      "name": "fuel_level",
      "type": "DOUBLE",
      "description": "Fuel tank level percentage"
    },
    {
      "name": "burner_status",
      "type": "STRING",
      "description": "Burner status (on, off, standby)"
    },
    {
      "name": "pump_status",
      "type": "STRING",
      "description": "Pump status (running, stopped, fault)"
    },
    {
      "name": "safety_status",
      "type": "STRING",
      "description": "Safety system status (ok, fault, emergency)"
    },
    {
      "name": "maintenance_required",
      "type": "BOOLEAN",
      "description": "Whether maintenance is required"
    }
  ],
  "indexes": [
    {
      "columns": ["device_id", "timestamp"],
      "type": "BTREE"
    },
    {
      "columns": ["location", "timestamp"],
      "type": "BTREE"
    },
    {
      "columns": ["status", "timestamp"],
      "type": "BTREE"
    }
  ],
  "partitioning": {
    "strategy": "time",
    "interval": "1d"
  }
} 