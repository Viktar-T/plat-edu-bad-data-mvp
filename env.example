# IoT Renewable Energy Monitoring System - Environment Variables Template
# Copy this file to .env and update the values according to your environment

# =============================================================================
# MQTT BROKER (Mosquitto) Configuration
# =============================================================================
MQTT_BROKER_HOST=localhost
MQTT_BROKER_PORT=1883
MQTT_BROKER_WS_PORT=9001
MQTT_USERNAME=iot_user
MQTT_PASSWORD=iot_password
MQTT_CLIENT_ID=iot_monitoring_system

# MQTT Topics
MQTT_TOPIC_PREFIX=devices
MQTT_TOPIC_TELEMETRY=telemetry
MQTT_TOPIC_STATUS=status
MQTT_TOPIC_CONFIG=config

# MQTT QoS Settings
MQTT_QOS_LEVEL=1
MQTT_RETAIN_MESSAGES=true

# =============================================================================
# INFLUXDB Configuration
# =============================================================================
INFLUXDB_ADMIN_USER=admin
INFLUXDB_ADMIN_PASSWORD=adminpassword
INFLUXDB_ORG=renewable_energy
INFLUXDB_BUCKET=iot_data
INFLUXDB_RETENTION=30d
INFLUXDB_TOKEN=your-super-secret-auth-token

# InfluxDB Connection
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TIMEOUT=10000

# Data Retention Policies
INFLUXDB_RETENTION_RAW=7d
INFLUXDB_RETENTION_AGGREGATED=30d
INFLUXDB_RETENTION_HISTORICAL=1y

# =============================================================================
# NODE-RED Configuration
# =============================================================================
NODE_RED_PORT=1880
NODE_RED_USER_DIR=/data
NODE_RED_FLOWS_FILE=flows.json
NODE_RED_SETTINGS_FILE=settings.js

# Node-RED Security
NODE_RED_USERNAME=admin
NODE_RED_PASSWORD=adminpassword
NODE_RED_CREDENTIAL_SECRET=your-node-red-secret

# Node-RED Performance
NODE_RED_MAX_OLD_SPACE_SIZE=512
NODE_RED_EDITOR_THEME=dark
NODE_RED_ENABLE_PROJECTS=true

# =============================================================================
# GRAFANA Configuration
# =============================================================================
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin
GRAFANA_PORT=3000

# Grafana Security
GRAFANA_SECURITY_COOKIE_SECURE=false
GRAFANA_USERS_ALLOW_SIGN_UP=false
GRAFANA_ANALYTICS_REPORTING_ENABLED=false

# Grafana Server
GRAFANA_SERVER_ROOT_URL=http://localhost:3000
GRAFANA_SERVER_SERVE_FROM_SUB_PATH=false
GRAFANA_LOG_LEVEL=info

# =============================================================================
# REDIS Configuration (Optional)
# =============================================================================
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redispassword
REDIS_DB=0

# =============================================================================
# PROMETHEUS Configuration (Optional)
# =============================================================================
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090
PROMETHEUS_RETENTION_TIME=200h

# =============================================================================
# APPLICATION Configuration
# =============================================================================
# Environment
NODE_ENV=development
APP_ENV=development

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=logs/app.log

# Timezone
TZ=UTC

# =============================================================================
# DEVICE SIMULATION Configuration
# =============================================================================
# Simulation Settings
SIMULATION_ENABLED=true
SIMULATION_INTERVAL=5000
SIMULATION_DEVICE_COUNT=10

# Device Types
SIMULATION_PHOTOVOLTAIC_COUNT=3
SIMULATION_WIND_TURBINE_COUNT=2
SIMULATION_BIOGAS_PLANT_COUNT=2
SIMULATION_HEAT_BOILER_COUNT=2
SIMULATION_ENERGY_STORAGE_COUNT=1

# Simulation Parameters
SIMULATION_NOISE_LEVEL=0.05
SIMULATION_FAULT_PROBABILITY=0.01
SIMULATION_SEASONAL_VARIATION=true

# =============================================================================
# SECURITY Configuration
# =============================================================================
# SSL/TLS
SSL_ENABLED=false
SSL_CERT_FILE=/path/to/cert.pem
SSL_KEY_FILE=/path/to/key.pem

# Authentication
AUTH_ENABLED=true
AUTH_TYPE=jwt
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRES_IN=24h

# API Security
API_RATE_LIMIT=100
API_RATE_LIMIT_WINDOW=15m

# =============================================================================
# MONITORING Configuration
# =============================================================================
# Health Checks
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3

# Metrics
METRICS_ENABLED=true
METRICS_PORT=9091
METRICS_PATH=/metrics

# Alerting
ALERTING_ENABLED=true
ALERTING_EMAIL_ENABLED=false
ALERTING_SMS_ENABLED=false

# =============================================================================
# BACKUP Configuration
# =============================================================================
# Backup Settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/backups

# Backup Storage
BACKUP_STORAGE_TYPE=local
BACKUP_S3_BUCKET=
BACKUP_S3_REGION=
BACKUP_S3_ACCESS_KEY=
BACKUP_S3_SECRET_KEY=

# =============================================================================
# DEVELOPMENT Configuration
# =============================================================================
# Development Settings
DEBUG_ENABLED=true
DEBUG_PORT=9229
HOT_RELOAD_ENABLED=true

# Testing
TEST_ENABLED=true
TEST_TIMEOUT=30000
TEST_RETRIES=3

# =============================================================================
# NETWORK Configuration
# =============================================================================
# Docker Network
DOCKER_NETWORK_NAME=iot-network
DOCKER_NETWORK_SUBNET=172.20.0.0/16

# Service Discovery
SERVICE_DISCOVERY_ENABLED=false
CONSUL_HOST=localhost
CONSUL_PORT=8500

# =============================================================================
# EXTERNAL INTEGRATIONS
# =============================================================================
# Weather API
WEATHER_API_ENABLED=false
WEATHER_API_KEY=
WEATHER_API_URL=https://api.openweathermap.org/data/2.5

# Energy Market API
ENERGY_MARKET_API_ENABLED=false
ENERGY_MARKET_API_KEY=
ENERGY_MARKET_API_URL=

# SCADA Integration
SCADA_ENABLED=false
SCADA_OPC_UA_ENABLED=false
SCADA_OPC_UA_URL=

# =============================================================================
# PERFORMANCE Configuration
# =============================================================================
# Database Performance
DB_CONNECTION_POOL_SIZE=10
DB_CONNECTION_TIMEOUT=5000
DB_QUERY_TIMEOUT=30000

# Cache Performance
CACHE_TTL=300
CACHE_MAX_SIZE=1000
CACHE_CLEANUP_INTERVAL=60000

# Processing Performance
BATCH_SIZE=100
BATCH_TIMEOUT=5000
MAX_CONCURRENT_PROCESSES=5

# =============================================================================
# COMPLIANCE Configuration
# =============================================================================
# Data Privacy
GDPR_COMPLIANCE_ENABLED=true
DATA_ANONYMIZATION_ENABLED=false
DATA_ENCRYPTION_ENABLED=true

# Audit Logging
AUDIT_LOG_ENABLED=true
AUDIT_LOG_LEVEL=info
AUDIT_LOG_RETENTION=90d

# =============================================================================
# DEPLOYMENT Configuration
# =============================================================================
# Deployment Environment
DEPLOYMENT_ENV=development
DEPLOYMENT_REGION=us-east-1
DEPLOYMENT_VERSION=1.0.0

# Resource Limits
CPU_LIMIT=1.0
MEMORY_LIMIT=1G
DISK_LIMIT=10G

# Scaling
AUTO_SCALING_ENABLED=false
MIN_INSTANCES=1
MAX_INSTANCES=5
SCALE_UP_THRESHOLD=80
SCALE_DOWN_THRESHOLD=20 